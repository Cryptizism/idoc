<%- include('partial/header'); %>
<%- include('partial/navigation'); %>

<div class="warpper-content warpper">
  <%- include('partial/chapters'); %>
  <markdown-style>
    <%- markdown %>
    <footer class="article-footer warpper">
      <% if (editButton && editButton.url && editButton.label) { %>
      <a href="<%=editButton.url || '' %>" class="edit-button" target="_blank" rel="noopener noreferrer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        <span><%=editButton.label%></span>
      </a>
      <% } %>
      
      <% if (fileStat && fileStat.mtimeStr) { %>
      <span class="atime"><%= fileStat.mtimeStr %></span>
      <% } %>
    </footer>

  </markdown-style>
  <% if (tocs) { %>
  <nav class="tocs">
    <aside class="inner toc"></aside>
  </nav>
  <% } %>
</div>

<% if (tocs) { %>
<script src="<%= RELATIVE_PATH %>js/tocbot.min.js?v=4.18.2"></script>
<script>
tocbot.init({
  tocSelector: 'aside.inner',
  contentSelector: 'markdown-style',
  positionFixedSelector: 'aside.inner',
  headingSelector: 'h1, h2, h3, h4',
  collapseDepth: 2,

  includeHtml: true,
  includeTitleTags: false,
  hasInnerContainers: true,
  onClick: (e) => { console.log('you clicked a link', e) },
  headingsOffset: 40,
  scrollSmoothOffset: -40,
});
</script>
<% } %>

<%- include('partial/footer'); %>